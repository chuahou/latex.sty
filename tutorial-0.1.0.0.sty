% Tutorial sheet solutions formatting.

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tutorial-0.1.0.0}

% tutorial title
\let\oldtitle\title
\renewcommand{\title}[2]{\oldtitle{
	{\large\sc #1} \\ \vspace{0.3em} % course (e.g. Compilers)
	{\Large\bf #2}%                  % sheet title (e.g. Problem Sheet 2)
}}
\renewcommand{\maketitle}{%
	\begin{center}
		\@title \\ \vspace{0.25em}
		\@author \vspace{1.5em}
	\end{center}%
}

% global itemize environment for question numbering
\RequirePackage{enumitem}
\newenvironment{questionize}
	{\begin{itemize}[leftmargin=*]}
	{\end{itemize}}

% custom item shortcuts
\newcommand{\itemc}[1]{\item[#1]}
\newcommand{\itemb}[1]{\item[\bf#1]}
